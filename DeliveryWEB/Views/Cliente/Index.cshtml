@model List<Cliente>
@using DeliveryWEB.Models

@{
    ViewData["Title"] = "Cliente";
}

<h2>Clientes</h2>
<a asp-action="Create" class="btn btn-success mb-3">Novo Cliente</a>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Endereço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Nome</td>
                <td>@c.Telefone</td>
                <td>@c.Endereco</td>
            </tr>
        }
    </tbody>
</table>
