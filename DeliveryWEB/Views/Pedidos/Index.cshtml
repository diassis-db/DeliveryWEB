@using DeliveryWEB.Data
@using DeliveryWEB.Models
@model List<Pedido>

    @{
    ViewData["Title"] = "Pedidos";
}

<h2>Pedidos</h2>
<a asp-action="Create" class="btn btn-success mb-3">Novo Pedido</a>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Itens</th>
            <th>Total</th>
            <th>Status</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ClienteNome</td>
                <td>
                    <ul class="mb-0">
                        @foreach (var i in p.Itens)
                        {
                            <li>@i.Produto - @i.Quantidade x R$ @i.ValorUnitario.ToString("0.00") = R$ @i.Total.ToString("0.00")</li>
                        }
                    </ul>
                </td>
                <td>R$ @p.ValorTotal.ToString("0.00")</td>
                <td>@(p.Entregue ? "✅ Entregue" : "⏳ Pendente")</td>
                <td>
                    @if (!p.Entregue)
                    {
                        <form asp-action="MarcarEntregue" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@p.Id" />
                            <button type="submit" class="btn btn-sm btn-primary">Marcar entregue</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
